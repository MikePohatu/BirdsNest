@using Newtonsoft.Json

@{
    ViewData["Title"] = "Visualizer";
    Layout = "_Layout";
}

@section Styles
    {
    <link rel="stylesheet" type="text/css" href="~/dist/css/visualizer-bundle.css" />
    <link rel="stylesheet" type="text/css" href="~/dynamic/plugins.css" />
}

<div id="pagewrapper">
    <div id="main">
        <div id="drawingpane">
            <partial name="AdvancedSearchPane" />
            <partial name="ViewControls" />

        </div>

        <div id="graphstatus" class="grid-x">
            <span id="statusIcon" class="cell small-2"></span>
            <span id="statusMessage" class="cell small-10"></span>
        </div>
        <partial name="DetailCards" />
    </div>
</div>

<input type="text" hidden="hidden" id=viewdataLoadIDs value="@Html.Raw(JsonConvert.SerializeObject(ViewData["LoadIDs"]))">
<input type="text" hidden="hidden" id=sharedSearchString value="@Html.Raw(ViewData["SharedSearchString"])">

@section Scripts
    {

    <environment include="Development">
        <script src="~/dist/d3-bundle.js" type="text/javascript"></script>
        <script src="/dist/visualizer-bundle.js" type="text/javascript"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/d3-bundle.js" type="text/javascript"></script>
        <script src="/dist/visualizer-bundle.js" type="text/javascript"></script>
    </environment>
}