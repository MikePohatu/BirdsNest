@using Console.Auth
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService


<!DOCTYPE html>
<html class="no-js" lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/img/Logo_64x64.png" sizes="64x64">
    <link rel="icon" type="image/png" href="/img/Logo_128x128.png" sizes="128x128">
    @*<link rel="icon" type="image/png" href="/img/Logo_32x32.png" sizes="32x32">*@
    <link rel="stylesheet" type="text/css" href="~/dist/css/common-vendor-bundle.css" />
    <link rel="stylesheet" type="text/css" href="~/dist/css/console-bundle.css" />

    @RenderSection("Styles", required: false)

    <link rel="stylesheet" type="text/css" href="/css/custom.css">
    @{
        if (string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            <title>BirdsNest</title>
        }
        else
        {
            <title>BirdsNest - @ViewBag.Title</title>
        }
    }

</head>
<body>
    <div id="curtain"></div>
    <div id="curtainoverlay"></div>

    <div id="modal"></div>

    <div class="title-bar grid-x" data-responsive-toggle="full-bar" data-hide-for="medium">
        <div class="cell small-2"><partial name="Menu" /></div>
        <div class="cell small-8 text-center">BirdsNest</div>
        <div class="cell small-2"></div>
    </div>

    <div class="top-bar" id="full-bar">
        <div class="top-bar-left">
            <ul class="menu">
                <li class="menu-text"><a href="/">BirdsNest</a></li>
            </ul>
        </div>
        <div class="top-bar-right">
            <partial name="Menu" />
        </div>
    </div>

    @RenderBody()


    <environment include="Development">
        <script src="~/dist/polyfill-bundle.js" type="text/javascript"></script>
        <script src="~/dist/common-vendor-bundle.js" type="text/javascript"></script>
        <script src="~/dist/console-bundle.js" type="text/javascript"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/polyfill-bundle.js" type="text/javascript"></script>
        <script src="~/dist/common-vendor-bundle.js" type="text/javascript"></script>
        <script src="~/dist/console-bundle.js" type="text/javascript"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>

